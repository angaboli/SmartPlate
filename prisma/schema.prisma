generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ─── ENUMS ───────────────────────────────────────────

enum Role {
  user
  editor
  admin
}

enum RecipeStatus {
  draft
  pending_review
  published
  rejected
}

enum ImportStatus {
  pending
  completed
  failed
}

enum MealType {
  breakfast
  lunch
  dinner
  snack
}

// ─── USERS ───────────────────────────────────────────

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  avatarUrl    String?
  role         Role     @default(user)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  settings      UserSettings?
  refreshTokens RefreshToken[]
  recipes       Recipe[]
  savedRecipes  SavedRecipe[]
  imports       Import[]
  mealLogs      MealLog[]

  @@map("users")
}

model UserSettings {
  id             String  @id @default(cuid())
  userId         String  @unique
  user           User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  language       String  @default("en")
  goal           String  @default("maintain")
  age            Int?
  weightKg       Float?
  heightCm       Float?
  activityLevel  String?
  calorieTarget  Int     @default(2000)
  proteinTargetG Int     @default(60)

  vegetarian     Boolean @default(false)
  vegan          Boolean @default(false)
  glutenFree     Boolean @default(false)
  dairyFree      Boolean @default(false)
  allergies      String[] @default([])

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("user_settings")
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@map("refresh_tokens")
}

// ─── RECIPES ─────────────────────────────────────────

model Recipe {
  id             String       @id @default(cuid())
  authorId       String?
  author         User?        @relation(fields: [authorId], references: [id], onDelete: SetNull)

  title          String
  description    String?
  imageUrl       String?
  prepTimeMin    Int?
  cookTimeMin    Int?
  servings       Int?
  calories       Int?
  category       String       @default("Regular")
  goal           String?
  aiRecommended  Boolean      @default(false)
  isImported     Boolean      @default(false)
  sourceUrl      String?
  sourceProvider String?

  status         RecipeStatus @default(draft)
  publishedAt    DateTime?
  reviewNote     String?

  ingredients    RecipeIngredient[]
  steps          RecipeStep[]
  savedBy        SavedRecipe[]
  import         Import?

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([category])
  @@index([goal])
  @@index([status])
  @@map("recipes")
}

model RecipeIngredient {
  id        String @id @default(cuid())
  recipeId  String
  recipe    Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  text      String
  sortOrder Int    @default(0)

  @@index([recipeId])
  @@map("recipe_ingredients")
}

model RecipeStep {
  id        String @id @default(cuid())
  recipeId  String
  recipe    Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  text      String
  sortOrder Int    @default(0)

  @@index([recipeId])
  @@map("recipe_steps")
}

// ─── COOK LATER (SAVED RECIPES) ─────────────────────

model SavedRecipe {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipeId  String
  recipe    Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  tag       String?
  isCooked  Boolean  @default(false)
  createdAt DateTime @default(now())

  @@unique([userId, recipeId])
  @@index([userId])
  @@map("saved_recipes")
}

// ─── IMPORTS ────────────────────────────────────────

model Import {
  id            String       @id @default(cuid())
  userId        String
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  url           String
  provider      String?
  status        ImportStatus @default(completed)
  extractedData Json?
  recipeId      String?      @unique
  recipe        Recipe?      @relation(fields: [recipeId], references: [id], onDelete: SetNull)
  error         String?
  createdAt     DateTime     @default(now())

  @@index([userId])
  @@map("imports")
}

// ─── MEAL LOGS ─────────────────────────────────────

model MealLog {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  mealText      String
  mealType      MealType
  analysis      Json
  totalCalories Int
  createdAt     DateTime @default(now())

  @@index([userId])
  @@index([userId, createdAt])
  @@map("meal_logs")
}
